<UIScrollView
    layout_width="match_parent"
    layout_height="match_parent"
    padding="10"
    backgroundColor="#ffffff">
    <LinearLayout
        layout_width="match_parent"
        layout_height="wrap_content"
        orientation="vertical">
        <UIImageView
            id="android"
            layout_width="match_parent"
            layout_height="100"
            scaleType="centerInside"
            layout_gravity="center_horizontal"
            src="@drawable/android.jpg"/>
        <Label
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_gravity="right"
            text="@string/values.formular_hint"
            textSize="10"
            textColor="#aaaaaa"/>
        <TextView
            id="freeText"
            layout_width="match_parent"
            layout_height="200"
            layout_marginBottom="10"/>
        <Label
            id="androidStatus"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginBottom="10"
            textSize="12"/>
        <LinearLayout
            layout_width="match_parent"
            layout_height="wrap_content"
            orientation="horizontal"
            gravity="center_horizontal">
            <UIButton
                id="submitButton"
                onClick="didPressSubmitButton"
                textColor="@color/button_color"
                layout_width="100"
                layout_height="30"
                text="@string/values.submit_button_title"/>
            <UIButton
                id="toggleButton"
                onClick="didPressToggleButton"
                textColor="@color/button_color"
                layout_width="wrap_content"
                layout_height="30"
                layout_marginLeft="10"
                text="@string/values.toggle_android_button_title"/>
        </LinearLayout>
    </LinearLayout>
</UIScrollView>