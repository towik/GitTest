<UIScrollView
    layout_width="match_parent"
    layout_height="match_parent"
    padding="20">
    <LinearLayout
        layout_width="match_parent"
        layout_height="wrap_content"
        orientation="vertical">
        <UIImageView
            id="android"
            layout_width="match_parent"
            layout_height="200"
            scaleType="centerInside"
            layout_gravity="center_horizontal"
            src="@drawable/android.jpg"/>
        <Label
            layout_width="wrap_content"
            layout_height="wrap_content"
            layout_gravity="right"
            text="Also try rotating your device"
            textSize="12"
            textColor="#aaaaaa"/>
        <UITextView
            id="freeText"
            layout_width="match_parent"
            layout_height="200"
            layout_marginBottom="20"
            borderWidth="1"
            borderColor="#000000"
            cornerRadius="5"/>
        <Label
            id="androidStatus"
            layout_width="match_parent"
            layout_height="wrap_content"
            layout_marginBottom="10"
            textSize="20"/>
        <LinearLayout
            layout_width="match_parent"
            layout_height="wrap_content"
            orientation="horizontal"
            gravity="center_horizontal">
            <UIButton
                id="submitButton"
                onClick="didPressSubmitButton"
                textColor="@color/button_color"
                layout_width="200"
                layout_height="60"
                layout_gravity="center_horizontal"
                text="Submit"/>
            <UIButton
                id="toggleButton"
                onClick="didPressToggleButton"
                textColor="@color/button_color"
                layout_width="200"
                layout_height="60"
                layout_marginLeft="20"
                text="Toggle Android"/>
        </LinearLayout>
    </LinearLayout>
</UIScrollView>